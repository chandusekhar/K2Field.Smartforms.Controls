<UserControl x:Class="SilverlightUpload.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="250" d:DesignWidth="200">

    <Grid x:Name="LayoutRoot" Background="White" Height="200" Width="150">
        <Button Content="Upload file" Height="23" HorizontalAlignment="Left" Name="btnUpload" VerticalAlignment="Top" Width="75" Click="btnUpload_Click" />
        <Image Name="imgThumb" Width="120" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,30,0,0" />
        <TextBlock Name="version" Text="OKE!" Margin="0,170, 0, 0" />
        
    </Grid>
</UserControl>
